<div class="row">
  <div class="small-12 small-centered columns text-center">
    <h3 class="subway-lines-title">Meet Our Subway Lines!</h3>
  </div>
</div>

<% @subway_lines.each do |subway| %>

  <div class="row">
    <div class="medium-8 medium-centered small-12 small-centered columns subway-image">
      <img src="/images/<%= subway.image_url %>" />
    </div>
  </div>
  <div class="row">
    <div class="medium-8 medium-centered small-12 small-centered columns subway-text">
      <p><%= subway.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="medium-8 medium-centered small-12 small-centered columns subway-text text-center">
      <a href="/adopt_now" class="button small adopt-now">Apply Now!</a>
    </div>
  </div>

<% end %>
